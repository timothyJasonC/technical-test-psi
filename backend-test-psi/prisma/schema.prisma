generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    String    @id @default(uuid())
  nama  String
  email String?   @unique
  telp  String
  company Company[]
}

model Company {
  id           String @id @default(uuid())
  userId       String
  companyCode  String
  companyName  String
  user         User   @relation(fields: [userId], references: [id])
}